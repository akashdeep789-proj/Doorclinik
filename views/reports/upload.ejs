<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-center mb-4" style="color:#fe424d;">
            Generate Your Medical Report through AI
          </h3>

          <p class="text-center text-muted">
            Upload your lab report in pdf or .jpeg format to get the summary of the report.
          </p>

          <form action="/ai-report/upload-text" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="reportFile" class="form-label">Please upload here-</label>
              <input class="form-control" type="file" id="reportFile" name="reportFile" accept=".pdf,image/*" required>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary" style="background: linear-gradient(135deg, #fe424d, #fc5c7d); border:none;">
                Generate Summary
              </button>
            </div>
          </form>

          <p class="text-center text-muted mt-3" style="font-size:0.9rem;">
            No login required. Its safe & secure.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
