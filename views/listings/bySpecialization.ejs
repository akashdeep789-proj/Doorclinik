<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2 class="mb-4">Doctors by Specialization</h2>

  <% if (specs.length === 0) { %>
    <p class="text-muted">No specializations found yet.</p>
  <% } else { %>
    <% specs.forEach(spec => { %>
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-dark text-white">
          <h4 class="mb-0"><%= spec.name %></h4>
        </div>
        <div class="card-body">
          <% if (spec.doctors.length === 0) { %>
            <p class="text-muted">No doctors available in this specialization.</p>
          <% } else { %>
            <div class="row">
              <% spec.doctors.forEach(doctor => { %>
                <div class="col-md-4 mb-3">
                  <div class="card h-100">
                    <% if (doctor.image && doctor.image.url) { %>
                      <img src="<%= doctor.image.url %>" 
                           class="card-img-top" 
                           alt="<%= doctor.title %>" 
                           style="height:200px; object-fit:cover;">
                    <% } %>
                    <div class="card-body">
                      <h5 class="card-title"><%= doctor.title %></h5>
                      <p class="card-text"><%= doctor.description.substring(0,100) %>...</p>
                      <p><strong>Fees:</strong> â‚¹<%= doctor.price %></p>
                      <p><strong>Location:</strong> <%= doctor.location %></p>
                      <a href="/listings/<%= doctor._id %>" class="btn btn-sm btn-outline-dark">
                        View Details
                      </a>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
