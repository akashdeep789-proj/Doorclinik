<style>
  .search-btn {
    background: linear-gradient(135deg, #fe424d, #fc5c7d);
    color: white;
    border-radius: 25px;
    padding: 0 1.5rem;
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background: linear-gradient(135deg, #fc5c7d, #fe424d);
    transform: scale(1.05);
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 2rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    width: 280px;
  }

  .navbar-brand {
    font-weight: bold;
    font-size: 1.5rem;
    color: #fe424d;
  }

  .nav-link {
    font-weight: 500;
    padding: 0.5rem 1rem;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #fe424d;
  }
</style>

<nav class="navbar navbar-expand-md bg-white border-bottom sticky-top shadow-sm">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-stethoscope"></i> Doorclinik
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      
      <!-- Left Nav -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings"><b>Explore Clinics</b></a>
        <% if (currUser && currUser.role === 'admin') { %>
          <a class="nav-link" href="/admin/dashboard"><b>Admin Dashboard</b></a>
        <% } %>
      </div>

      <!-- Center Search -->
      <div class="mx-auto">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input
            class="form-control me-2 search-inp"
            name="q"
            type="search"
            placeholder="Search by location, doctor, or specialty"
            value="<%= typeof query !== 'undefined' ? query : '' %>"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right Nav -->
      <div class="navbar-nav ms-auto">
        <% if (currUser) { %>
          <% if (currUser.role !== 'admin') { %>
            <a class="nav-link" href="/listings/<%= currUser._id %>/bookings/mine"><b>My Appointments</b></a>
          <% } %>
          <% if (currUser.role === 'admin') { %>
            <a class="nav-link" href="/listings/new"><b>Add Clinic / Doctor</b></a>
          <% } else { %>
            <a class="nav-link" href="/listings/new"><b>Add your clinik</b></a>
          <% } %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } else { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
      </div>

    </div>
  </div>
</nav>
