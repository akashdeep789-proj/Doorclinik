<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Sign Up as <%= role %></h1>
  <div class="col-6 offset-3">
    <form action="/<%= role %>/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" class="form-control" required/>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email-Id</label>
            <input name="email" id="email" type="email" class="form-control" required/>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" class="form-control" required/>
        </div>
        <% if(role === "patient") { %>
        <div class="mb-3">
            <label for="adminCode" class="form-label">Admin Code (optional)</label>
            <input name="adminCode" id="adminCode" type="text" class="form-control"/>
        </div>
        <% } %>
        <button class="btn btn-success">Signup</button>
    </form>
  </div>
</div>
