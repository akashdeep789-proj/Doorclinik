<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Wanderlust</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200..800&display=swap" rel="stylesheet" />

  <!-- CSS -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/rating.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://api.mapbox.com/mapbox-gl-js/v3.13.0/mapbox-gl.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />

  <!-- Mapbox -->
  <script src="https://api.mapbox.com/mapbox-gl-js/v3.13.0/mapbox-gl.js"></script>

  <!-- Toast Styles -->
  <style>
    .toast-container {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 9999;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include("../includes/navbar.ejs") %>

  <!-- Flash Messages -->
  <div class="container">
    <%- include("../includes/flash.ejs") %>
    <%- body %>
  </div>

  <!-- Footer -->
  <%- include("../includes/footer.ejs") %>

  <!-- Toast container -->
  <div class="toast-container" id="toastContainer"></div>

  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

  <!-- FullCalendar -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

  <!-- Socket.IO (Client-side) -->
  <script src="/socket.io/socket.io.js"></script>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Custom JS -->
  <script src="/js/script.js"></script>

  <!-- Socket.IO Client Script -->
  <script>
    // -----------------------------
    // Initialize socket connection
    // -----------------------------
    const socket = io({
      auth: {
        token: "<%= currUser ? currUser.jwtToken : '' %>" // pass JWT if user logged in
      }
    });

    // Listen for server notifications
    socket.on("notification", (data) => {
      showToast(data.message, data.type || 'info');

      // Optional: redirect on click (if bookingId exists)
      if (data.bookingId) {
        // You can add a click handler here if needed
        // e.g., redirect to booking page when clicked
      }
    });

    // Toast helper
    function showToast(message, type = "info") {
      Swal.fire({
        toast: true,
        position: "top-end",
        icon: type,
        title: message,
        showConfirmButton: false,
        timer: 8000,
        timerProgressBar: true,
        customClass: { popup: 'colored-toast' }
      });
    }

    // Optional: keep socket alive check
    socket.on("pongServer", (data) => {
      console.log("Server alive:", data.message);
    });
  </script>
</body>
</html>
